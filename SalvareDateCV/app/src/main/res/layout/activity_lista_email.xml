<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista_email"
    style="@style/AppTheme"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.salvaredatecv.ListaEmailActivity">

    <Button
        android:text="Meniu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:id="@+id/btn_meniu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:background="@drawable/login"/>

    <TextView
        android:text="Adauga E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_AdaugaEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Email"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView_Email"
        android:layout_alignEnd="@+id/btn_Logout"
        android:autoText="true"
        android:editable="true" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Logout"
        android:layout_below="@+id/btn_meniu"
        android:layout_alignStart="@+id/btn_meniu"
        android:textColor="@color/black"
        android:background="@drawable/login"/>

    <Button
        android:text="Adauga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_AdaugaEmail"
        android:autoText="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:background="@drawable/login"/>

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Email"
        android:layout_below="@+id/btn_Logout"
        android:layout_alignEnd="@+id/textView_AdaugaEmail" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_Email"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="300dp"
        android:divider="#d1d1d1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
